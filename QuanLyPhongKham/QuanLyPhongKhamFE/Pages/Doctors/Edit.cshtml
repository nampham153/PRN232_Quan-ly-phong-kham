@page
@model QuanLyPhongKham.Pages.Doctors.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa thông tin bác sĩ";
}
<h2>@ViewData["Title"]</h2>

<div class="modal-body">
    <form method="post" id="doctorEditForm">
        <input type="hidden" asp-for="Doctor.AccountId" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Doctor.FullName" class="form-label"></label>
            <input asp-for="Doctor.FullName" class="form-control" />
            <span asp-validation-for="Doctor.FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Doctor.Email" class="form-label"></label>
            <input asp-for="Doctor.Email" class="form-control" />
            <span asp-validation-for="Doctor.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Doctor.Phone" class="form-label"></label>
            <input asp-for="Doctor.Phone" class="form-control" />
            <span asp-validation-for="Doctor.Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Doctor.DOB" class="form-label"></label>
            <input asp-for="Doctor.DOB" type="date" class="form-control" />
            <span asp-validation-for="Doctor.DOB" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Doctor.Gender" class="form-label"></label>
            <select asp-for="Doctor.Gender" class="form-select">
                <option value="">Select Gender</option>
                <option value="Male" selected="@("Male" == Model.Doctor.Gender)">Male</option>
                <option value="Female" selected="@("Female" == Model.Doctor.Gender)">Female</option>
                <option value="Other" selected="@("Other" == Model.Doctor.Gender)">Other</option>
            </select>
            <span asp-validation-for="Doctor.Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Doctor.DoctorPath">Link Ảnh (AvatarPath)</label>
            <input asp-for="Doctor.DoctorPath"  />
            <span asp-validation-for="Doctor.DoctorPath" class="validation-error"></span>
        </div>
        @if (!string.IsNullOrEmpty(Model.Doctor.DoctorPath))
        {
            <div class="form-group">
                <label>Ảnh hiện tại:</label><br />
                <img src="@Model.Doctor.DoctorPath" alt="Avatar" style="width: 100px; height: 100px; object-fit: cover;" />
            </div>
        }

        <div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="Index" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
