@page
@model QuanLyPhongKham.Pages.Authen.CreateModel

<h2>Tạo tài khoản mới</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Tên đăng nhập</label>
        <input asp-for="Account.Username" class="form-control" />
        <span asp-validation-for="Account.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Mật khẩu</label>
        <input asp-for="Account.Password" type="password" class="form-control" />
        <span asp-validation-for="Account.Password" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label>Họ và tên</label>
        <input asp-for="Account.FullName" class="form-control" />
        <span asp-validation-for="Account.FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Vai trò</label>
        <select asp-for="Account.RoleId" class="form-control" asp-items="Model.RoleSelectList">
            <option value="">-- Chọn vai trò --</option>
        </select>
        <span asp-validation-for="Account.RoleId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Trạng thái</label>
        <select asp-for="Account.Status" class="form-control">
            <option value="true">Hoạt động</option>
            <option value="false" selected>Vô hiệu hóa</option>
        </select>
        <span asp-validation-for="Account.Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Tạo</button>
    <a asp-page="./Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

