@page "{id:int}"
@model QuanLyPhongKham.Pages.Authen.DetailsModel

<h2>Chi tiết tài khoản</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.Account.Username</dd>

       @*  <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Account.User.Email</dd> *@

        <dt class="col-sm-2">Vai trò</dt>
        <dd class="col-sm-10">@Model.Account.Role.RoleName</dd>

        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@((Model.Account.Status) ? "Hoạt động" : "Vô hiệu hóa")</dd>
    </dl>
</div>

<a asp-page="./Index" class="btn btn-secondary">Quay lại</a>
<a asp-page="./Edit" asp-route-id="@Model.Account.AccountId" class="btn btn-warning">Sửa</a>
