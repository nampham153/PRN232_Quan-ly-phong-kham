@page
@model QuanLyPhongKham.Pages.Authen.IndexModel

<h2>Quản lý Tài Khoản</h2>
<a asp-page="./Create" class="btn btn-success mb-3">Tạo Tài Khoản Mới</a>
<form method="get">
    <input type="hidden" name="pages" value="@Model.CurrentPage" />

    <div class="row">
        <!-- Cột trái: Tìm kiếm -->
        <div class="row align-items-end">
            <!-- Ô tìm kiếm -->
            <div class="col-md-9">
                <div class="form-group">
                    <label for="Search">Tìm kiếm</label>
                    <input type="text" id="Search" name="Search" class="form-control" value="@Model.Search" placeholder="Tìm theo tên, email, username" />
                </div>
            </div>

            <!-- Nút tìm kiếm -->
            <div class="col-md-3">
                <div class="form-group">
                    <label class="invisible">Tìm kiếm</label> <!-- Ẩn label để giữ khoảng cách -->
                    <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
                </div>
            </div>
        </div>

        <!-- Cột phải: Vai trò và Trạng thái -->
        <div class="row">
            <!-- Cột 1: Vai trò -->
            <div class="col-md-3">
                <div class="form-group">
                    <label for="RoleId">Vai trò</label>
                    <select id="RoleId" name="RoleId" class="form-control">
                        <option value="">Tất cả</option>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.RoleId" selected="@(role.RoleId == Model.RoleId)">
                                @role.RoleName
                            </option>
                        }
                    </select>
                </div>
            </div>

            <!-- Cột 2: Trạng thái -->
            <div class="col-md-3">
                <div class="form-group">
                    <label for="Status">Trạng thái</label>
                    <select id="Status" name="Status" class="form-control">
                        <option value="">Tất cả</option>
                        <option value="true" selected="@(Model.Status == true)">Hoạt động</option>
                        <option value="false" selected="@(Model.Status == false)">Vô hiệu hóa</option>
                    </select>
                </div>
            </div>
        </div>

    </div>

   
</form>


<table class="table table-bordered table-striped mt-3">
    <thead>
        <tr>
            <th>Username</th>
            <th>Vai trò</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Accounts != null && Model.Accounts.Any())
        {
            foreach (var account in Model.Accounts)
            {
                <tr>
                    <td>@account.Username</td>
                    <td>@account.RoleName</td>
                    <td>@(account.Status ? "Hoạt động" : "Vô hiệu hóa")</td>
                    <td>
                        <a href="@Url.Page("/Authen/Details", new { id = account.AccountId })" class="btn btn-info btn-sm">Chi tiết</a>
                        <a href="@Url.Page("/Authen/Edit", new { id = account.AccountId })" class="btn btn-warning btn-sm">Sửa</a>
                        <a href="@Url.Page("/Authen/Delete", new { id = account.AccountId })"
                           class="btn btn-danger btn-sm @(account.Status ? "disabled" : "")">Xóa</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Không có dữ liệu</td>
            </tr>
        }
    </tbody>
</table>
<br />
<nav>
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link"
               href="?pages=@(Model.CurrentPage - 1)&Search=@Model.Search&RoleId=@Model.RoleId&Status=@Model.Status">
                Trước
            </a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link"
                   href="?pages=@i&Search=@Model.Search&RoleId=@Model.RoleId&Status=@Model.Status">
                @i
                </a>
            </li>
        }

        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a class="page-link"
               href="?pages=@(Model.CurrentPage + 1)&Search=@Model.Search&RoleId=@Model.RoleId&Status=@Model.Status">
                Sau
            </a>
        </li>
    </ul>
</nav>
