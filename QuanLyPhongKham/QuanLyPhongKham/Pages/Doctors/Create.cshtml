@page
@model QuanLyPhongKham.Pages.Doctors.CreateModel
@{
    ViewData["Title"] = "Tạo bác sĩ";
}
<h2>@ViewData["Title"]</h2>

<form method="post" enctype="multipart/form-data" id="doctorCreateForm">
    <div class="mb-3">
        <label asp-for="Doctor.FullName" class="form-label"></label>
        <input asp-for="Doctor.FullName" class="form-control" />
        <span asp-validation-for="Doctor.FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Doctor.Gender" class="form-label"></label>
        <select asp-for="Doctor.Gender" class="form-control">
            <option value="">-- Chọn giới tính --</option>
            <option>Male</option>
            <option>Female</option>
            <option>Other</option>
        </select>
        <span asp-validation-for="Doctor.Gender" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Doctor.DOB" class="form-label"></label>
        <input asp-for="Doctor.DOB" class="form-control" type="date" />
        <span asp-validation-for="Doctor.DOB" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Doctor.Phone" class="form-label"></label>
        <input asp-for="Doctor.Phone" class="form-control" />
        <span asp-validation-for="Doctor.Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Doctor.Email" class="form-label"></label>
        <input asp-for="Doctor.Email" class="form-control" />
        <span asp-validation-for="Doctor.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Doctor.AccountId" class="form-label"></label>
        <select asp-for="Doctor.AccountId" class="form-control">
            <option value="">-- Chọn tài khoản --</option>
            @foreach (var acc in Model.AvailableAccounts)
            {
                <option value="@acc.AccountId">@acc.Username</option>
            }
        </select>
        <span asp-validation-for="Doctor.AccountId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageFile" class="form-label">Ảnh đại diện (chọn tệp hoặc để trống)</label>
        <input asp-for="ImageFile" type="file" accept="image/*" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Doctor.DoctorPath" class="form-label">Hoặc nhập URL ảnh (nếu có)</label>
        <input asp-for="Doctor.DoctorPath" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Tạo mới</button>
    <a asp-page="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
