@page
@model Frontendui.Pages.TestPage.CreateModel

@{
    ViewData["Title"] = "Create Test";
}

<h1>Create Test</h1>

<h4>Test</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Test.TestName" class="control-label"></label>
                <input asp-for="Test.TestName" class="form-control" />
                <span asp-validation-for="Test.TestName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Test.Description" class="control-label"></label>
                <textarea asp-for="Test.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Test.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}