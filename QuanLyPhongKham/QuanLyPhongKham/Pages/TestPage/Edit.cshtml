@page
@model Frontendui.Pages.TestPage.EditModel
@{
    ViewData["Title"] = "Edit Test";
}

<h1>Edit Test</h1>
<h4>Test</h4>
<hr />

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var modelError in ViewData.ModelState.Values)
            {
                foreach (var error in modelError.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <!-- Sử dụng TestId property thay vì Test.TestId -->
            <input type="hidden" asp-for="TestId" />

            <div class="form-group mb-3">
                <label asp-for="Test.TestName" class="control-label">Test Name</label>
                <input asp-for="Test.TestName" class="form-control" />
                <span asp-validation-for="Test.TestName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Test.Description" class="control-label">Description</label>
                <textarea asp-for="Test.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Test.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    document.querySelector('form').addEventListener('submit', function (e) {
        console.log('Form submitted');
    });
</script>