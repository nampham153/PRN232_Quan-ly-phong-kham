@page
@model QuanLyPhongKham.Pages.MedicinePage.EditModel
@{
    ViewData["Title"] = "Edit Medicine";
}

<div class="row">
    <div class="col-lg-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h4 class="card-title mb-0">Edit Medicine</h4>
                        <p class="card-description">Update medicine information</p>
                    </div>
                    <div class="btn-group">
                        <a asp-page="./Details" asp-route-id="@Model.Medicine.MedicineId" class="btn btn-info btn-sm">
                            <i class="mdi mdi-eye"></i> View Details
                        </a>
                        <a asp-page="./Index" class="btn btn-light btn-sm">
                            <i class="mdi mdi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="mdi mdi-alert-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form method="post" class="forms-sample">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <input type="hidden" asp-for="Medicine.MedicineId" />
                    
                    <div class="form-group">
                        <label class="form-label">Medicine ID</label>
                        <input value="@Model.Medicine.MedicineId" class="form-control" disabled />
                        <small class="form-text text-muted">Medicine ID cannot be changed</small>
                    </div>

                    <div class="form-group">
                        <label asp-for="Medicine.MedicineName" class="form-label">Medicine Name</label>
                        <input asp-for="Medicine.MedicineName" class="form-control" placeholder="Enter medicine name" />
                        <span asp-validation-for="Medicine.MedicineName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Medicine.Unit" class="form-label">Unit</label>
                        <input asp-for="Medicine.Unit" class="form-control" placeholder="Enter unit (e.g., tablets, ml, mg)" />
                        <span asp-validation-for="Medicine.Unit" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Medicine.Usage" class="form-label">Usage Instructions</label>
                        <textarea asp-for="Medicine.Usage" class="form-control" rows="4" placeholder="Enter usage instructions"></textarea>
                        <span asp-validation-for="Medicine.Usage" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="mdi mdi-content-save"></i> Update Medicine
                        </button>
                        <a asp-page="./Index" class="btn btn-light">
                            <i class="mdi mdi-cancel"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <style>
        .card-title {
            color: #6c7293;
            font-weight: 500;
        }

        .card-description {
            color: #a7a7a7;
            font-size: 0.875rem;
            margin-bottom: 0;
        }

        .form-label {
            color: #6c7293;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .form-control {
            border: 1px solid #d1d5db;
            border-radius: 0.375rem;
            padding: 0.75rem 1rem;
            font-size: 0.875rem;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .form-control:disabled {
            background-color: #f8f9fa;
            opacity: 1;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-text {
            font-size: 0.75rem;
            margin-top: 0.25rem;
        }

        .text-danger {
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .alert {
            border: none;
            border-radius: 0.375rem;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #58151c;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }

        .grid-margin {
            margin-bottom: 1.875rem;
        }

        .stretch-card {
            display: flex;
            align-items: stretch;
        }

        .stretch-card > .card {
            width: 100%;
            min-height: 100%;
        }

        .btn-group .btn {
            margin-right: 4px;
        }

        .btn-group .btn:last-child {
            margin-right: 0;
        }

        .btn-icon-text {
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }
    </style>
}