@page "{id:int}"
@model QuanLyPhongKham.Pages.Prescription.UpdatePrescriptionModel
@{
    ViewData["Title"] = "Update Prescription";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h4 class="card-title mb-0">Update Prescription</h4>
                        <p class="card-description">Modify details of an existing medical prescription</p>
                    </div>
                    <a asp-page="ListPrescription" class="btn btn-outline-secondary btn-sm btn-icon-text">
                        <i class="mdi mdi-arrow-left"></i> Back to List
                    </a>
                </div>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="mdi mdi-alert-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="mdi mdi-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form method="post">
                    <input type="hidden" asp-for="Prescription.PrescriptionId" />
                    <validation-summary class="alert alert-danger" role="alert" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Prescription.RecordId" class="form-label">
                                    <i class="mdi mdi-file-document me-1"></i>Medical Record
                                </label>
                                <select asp-for="Prescription.RecordId" asp-items="Model.Records" class="form-select">
                                    <option value="">-- Select Record --</option>
                                </select>
                                <span asp-validation-for="Prescription.RecordId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Prescription.MedicineId" class="form-label">
                                    <i class="mdi mdi-pill me-1"></i>Medicine
                                </label>
                                <select asp-for="Prescription.MedicineId" asp-items="Model.Medicines" class="form-select">
                                    <option value="">-- Select Medicine --</option>
                                </select>
                                <span asp-validation-for="Prescription.MedicineId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Prescription.Dosage" class="form-label">
                                    <i class="mdi mdi-medical-bag me-1"></i>Dosage
                                </label>
                                <input asp-for="Prescription.Dosage" class="form-control" placeholder="Enter dosage..." />
                                <span asp-validation-for="Prescription.Dosage" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Prescription.Quantity" class="form-label">
                                    <i class="mdi mdi-counter me-1"></i>Quantity
                                </label>
                                <input asp-for="Prescription.Quantity" class="form-control" placeholder="Enter quantity..." />
                                <span asp-validation-for="Prescription.Quantity" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-primary btn-icon-text">
                            <i class="mdi mdi-content-save me-1"></i>Update Prescription
                        </button>
                        <a asp-page="ListPrescription" class="btn btn-outline-secondary btn-icon-text">
                            <i class="mdi mdi-close me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}

@section Styles {
    <style>
        .card-title {
            color: #6c7293;
            font-weight: 500;
        }

        .card-description {
            color: #a7a7a7;
            font-size: 0.875rem;
            margin-bottom: 0;
        }

        .alert {
            border: none;
            border-radius: 0.375rem;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #58151c;
        }

        .alert-success {
            background-color: #d1e7dd;
            color: #0a3622;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }

        .grid-margin {
            margin-bottom: 1.875rem;
        }

        .stretch-card {
            display: flex;
            align-items: stretch;
        }

            .stretch-card > .card {
                width: 100%;
                min-height: 100%;
            }

        .form-label {
            color: #6c7293;
            font-weight: 500;
        }

        .form-control,
        .form-select {
            border-radius: 0.375rem;
        }

        .btn-icon-text {
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }

        .gap-2 {
            gap: 0.5rem;
        }
    </style>
}