@page "{id:int}"
@model QuanLyPhongKham.Pages.Prescription.UpdatePrescriptionModel
@{
    ViewData["Title"] = "Cập nhật đơn thuốc";
}

<h2>Cập nhật đơn thuốc</h2>

<form method="post">
    <input type="hidden" asp-for="Prescription.PrescriptionId" />
    <div class="form-group">
        <label>Hồ sơ</label>
        <select asp-for="Prescription.RecordId" asp-items="Model.Records" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Thuốc</label>
        <select asp-for="Prescription.MedicineId" asp-items="Model.Medicines" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Liều lượng</label>
        <input asp-for="Prescription.Dosage" class="form-control" />
    </div>
    <div class="form-group">
        <label>Số lượng</label>
        <input asp-for="Prescription.Quantity" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-page="ListPrescription" class="btn btn-secondary">Quay lại</a>
</form>
