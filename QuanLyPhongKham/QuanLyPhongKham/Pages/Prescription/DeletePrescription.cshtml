@page "{id:int}"
@model QuanLyPhongKham.Pages.Prescription.DeletePrescriptionModel
@{
    ViewData["Title"] = "Delete Prescription";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h4 class="card-title mb-0">Delete Prescription</h4>
                        <p class="card-description">Confirm deletion of a medical prescription</p>
                    </div>
                    <a asp-page="ListPrescription" class="btn btn-outline-secondary btn-sm btn-icon-text">
                        <i class="mdi mdi-arrow-left"></i> Back to List
                    </a>
                </div>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="mdi mdi-alert-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="alert alert-warning" role="alert">
                    <i class="mdi mdi-alert me-2"></i>
                    Are you sure you want to delete this prescription? This action cannot be undone.
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3">
                        <p class="fw-bold mb-0">Prescription ID:</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.Prescription.PrescriptionId</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <p class="fw-bold mb-0">Medical Record:</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">Record #@Model.Prescription.RecordId</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <p class="fw-bold mb-0">Medicine:</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.Prescription.MedicineName</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <p class="fw-bold mb-0">Dosage:</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.Prescription.Dosage</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <p class="fw-bold mb-0">Quantity:</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.Prescription.Quantity</p>
                    </div>
                </div>

                <form method="post">
                    <input type="hidden" asp-for="Prescription.PrescriptionId" />
                    <div class="d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-danger btn-icon-text">
                            <i class="mdi mdi-delete me-1"></i>Delete
                        </button>
                        <a asp-page="ListPrescription" class="btn btn-outline-secondary btn-icon-text">
                            <i class="mdi mdi-close me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}

@section Styles {
    <style>
        .card-title {
            color: #6c7293;
            font-weight: 500;
        }

        .card-description {
            color: #a7a7a7;
            font-size: 0.875rem;
            margin-bottom: 0;
        }

        .alert {
            border: none;
            border-radius: 0.375rem;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #58151c;
        }

        .alert-warning {
            background-color: #fff3cd;
            color: #664d03;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }

        .grid-margin {
            margin-bottom: 1.875rem;
        }

        .stretch-card {
            display: flex;
            align-items: stretch;
        }

            .stretch-card > .card {
                width: 100%;
                min-height: 100%;
            }

        .btn-icon-text {
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }

        .gap-2 {
            gap: 0.5rem;
        }
    </style>
}