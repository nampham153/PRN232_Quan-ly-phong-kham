@page "{id:int}"
@model QuanLyPhongKham.Pages.Prescription.DeletePrescriptionModel
@{
    ViewData["Title"] = "Xoá đơn thuốc";
}

<h2>Xoá đơn thuốc</h2>

<div>
    <p>Bạn có chắc muốn xoá đơn thuốc có ID: <strong>@Model.Prescription.PrescriptionId</strong> không?</p>
    <form method="post">
        <input type="hidden" asp-for="Prescription.PrescriptionId" />
        <button type="submit" class="btn btn-danger">Xoá</button>
        <a asp-page="ListPrescription" class="btn btn-secondary">Huỷ</a>
    </form>
</div>
