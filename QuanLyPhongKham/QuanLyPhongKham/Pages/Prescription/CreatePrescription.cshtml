@page
@model QuanLyPhongKham.Pages.Prescription.CreatePrescriptionModel
@{
    ViewData["Title"] = "Thêm đơn thuốc";
}

<h2>Thêm đơn thuốc</h2>

<form method="post">
    <div class="form-group">
        <label>Hồ sơ</label>
        <select asp-for="Prescription.RecordId" asp-items="Model.Records" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Thuốc</label>
        <select asp-for="Prescription.MedicineId" asp-items="Model.Medicines" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Liều lượng</label>
        <input asp-for="Prescription.Dosage" class="form-control" />
    </div>
    <div class="form-group">
        <label>Số lượng</label>
        <input asp-for="Prescription.Quantity" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-page="ListPrescription" class="btn btn-secondary">Huỷ</a>
</form>
