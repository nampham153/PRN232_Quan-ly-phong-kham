@page
@model QuanLyPhongKham.Pages.Prescription.ListPrescriptionModel
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Danh sách đơn thuốc";
}

<h2>Danh sách đơn thuốc</h2>

<form method="get" class="mb-3">
    <div class="row">
        <div class="col">
            <label>Hồ sơ</label>
            <select asp-for="RecordId" asp-items="Model.Records" class="form-control">
                <option value="">-- Tất cả --</option>
            </select>
        </div>
        <div class="col">
            <label>Thuốc</label>
            <select asp-for="MedicineId" asp-items="Model.Medicines" class="form-control">
                <option value="">-- Tất cả --</option>
            </select>
        </div>
        <div class="col">
            <label>Liều lượng</label>
            <input asp-for="Dosage" class="form-control" />
        </div>
        <div class="col">
            <label>Số lượng</label>
            <input asp-for="Quantity" class="form-control" />
        </div>
        <div class="col">
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary form-control">Tìm kiếm</button>
        </div>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Hồ sơ</th>
            <th>Thuốc</th>
            <th>Số lượng</th>
            <th>Liều dùng</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Prescriptions)
        {
            <tr>
                <td>@item.PrescriptionId</td>
                <td>@item.RecordSummary</td>
                <td>@item.MedicineName</td>
                <td>@item.Quantity</td>
                <td>@item.Dosage</td>
                <td>
                    <a asp-page="UpdatePrescription" asp-route-id="@item.PrescriptionId" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-page="DeletePrescription" asp-route-id="@item.PrescriptionId" class="btn btn-sm btn-danger">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="CreatePrescription" class="btn btn-success">+ Thêm đơn thuốc</a>
