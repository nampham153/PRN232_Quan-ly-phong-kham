@page
@model QuanLyPhongKham.Pages.Prescription.ListPrescriptionModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Prescription Management";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h4 class="card-title mb-0">Prescription Management</h4>
                        <p class="card-description">Manage and organize all medical prescriptions in the system</p>
                    </div>
                    <a asp-page="CreatePrescription" class="btn btn-primary btn-sm">
                        <i class="mdi mdi-plus"></i> Add New Prescription
                    </a>
                </div>
                <!-- Filter Section -->
                <form method="get" id="filterForm">
                    <div class="row mb-4">
                        <div class="col-lg-4 col-md-6">
                            <div class="form-group mb-0">
                                <label for="recordId" class="form-label">
                                    <i class="mdi mdi-file-document me-1"></i>Filter by Medical Record
                                </label>
                                <select asp-for="RecordId" asp-items="Model.Records" class="form-select" id="recordId">
                                    <option value="">-- All Records --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="form-group mb-0">
                                <label for="medicineId" class="form-label">
                                    <i class="mdi mdi-pill me-1"></i>Filter by Medicine
                                </label>
                                <select asp-for="MedicineId" asp-items="Model.Medicines" class="form-select" id="medicineId">
                                    <option value="">-- All Medicines --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="form-group mb-0">
                                <label for="dosage" class="form-label">
                                    <i class="mdi mdi-medical-bag me-1"></i>Dosage
                                </label>
                                <input asp-for="Dosage" class="form-control" id="dosage" placeholder="Enter dosage..." />
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="form-group mb-0">
                                <label for="startDate" class="form-label">
                                    <i class="mdi mdi-calendar-start me-1"></i>Start Date
                                </label>
                                <input asp-for="StartDate" type="date" class="form-control" id="startDate" />
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="form-group mb-0">
                                <label for="endDate" class="form-label">
                                    <i class="mdi mdi-calendar-end me-1"></i>End Date
                                </label>
                                <input asp-for="EndDate" type="date" class="form-control" id="endDate" />
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="form-group mb-0">
                                <label for="diagnosis" class="form-label">
                                    <i class="mdi mdi-stethoscope me-1"></i>Diagnosis
                                </label>
                                <input asp-for="Diagnosis" class="form-control" id="diagnosis" placeholder="Enter diagnosis..." />
                            </div>
                        </div>
                        
                    </div>
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="d-flex align-items-center gap-2">
                                <button type="submit" class="btn btn-outline-secondary btn-sm">
                                    <i class="mdi mdi-filter"></i> Apply Filters
                                </button>
                                @if (!string.IsNullOrEmpty(Model.RecordId?.ToString()) || !string.IsNullOrEmpty(Model.MedicineId?.ToString()) || !string.IsNullOrEmpty(Model.Dosage) || Model.StartDate.HasValue || Model.EndDate.HasValue || !string.IsNullOrEmpty(Model.Diagnosis) || !string.IsNullOrEmpty(Model.DoctorName))
                                {
                                    <a asp-page="./ListPrescription" class="btn btn-outline-danger btn-sm" title="Clear All Filters">
                                        <i class="mdi mdi-close"></i> Clear All
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </form>

                <!-- Active Filters Display -->
                @if (!string.IsNullOrEmpty(Model.RecordId?.ToString()) || !string.IsNullOrEmpty(Model.MedicineId?.ToString()) || !string.IsNullOrEmpty(Model.Dosage) || Model.StartDate.HasValue || Model.EndDate.HasValue || !string.IsNullOrEmpty(Model.Diagnosis) || !string.IsNullOrEmpty(Model.DoctorName))
                {
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="alert alert-info py-2">
                                <i class="mdi mdi-information me-2"></i>
                                <strong>Active Filters:</strong>
                                @if (!string.IsNullOrEmpty(Model.RecordId?.ToString()))
                                {
                                    <span class="badge badge-info me-2">
                                        Record ID: @Model.RecordId
                                        <a asp-page="./ListPrescription" asp-route-MedicineId="@Model.MedicineId" asp-route-Dosage="@Model.Dosage" asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")" asp-route-Diagnosis="@Model.Diagnosis" asp-route-DoctorName="@Model.DoctorName" class="text-white ms-1" title="Remove record filter">
                                            <i class="mdi mdi-close"></i>
                                        </a>
                                    </span>
                                }
                                @if (!string.IsNullOrEmpty(Model.MedicineId?.ToString()))
                                {
                                    <span class="badge badge-info me-2">
                                        Medicine ID: @Model.MedicineId
                                        <a asp-page="./ListPrescription" asp-route-RecordId="@Model.RecordId" asp-route-Dosage="@Model.Dosage" asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")" asp-route-Diagnosis="@Model.Diagnosis" asp-route-DoctorName="@Model.DoctorName" class="text-white ms-1" title="Remove medicine filter">
                                            <i class="mdi mdi-close"></i>
                                        </a>
                                    </span>
                                }
                                @if (!string.IsNullOrEmpty(Model.Dosage))
                                {
                                    <span class="badge badge-info me-2">
                                        Dosage: @Model.Dosage
                                        <a asp-page="./ListPrescription" asp-route-RecordId="@Model.RecordId" asp-route-MedicineId="@Model.MedicineId" asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")" asp-route-Diagnosis="@Model.Diagnosis" asp-route-DoctorName="@Model.DoctorName" class="text-white ms-1" title="Remove dosage filter">
                                            <i class="mdi mdi-close"></i>
                                        </a>
                                    </span>
                                }
                                @if (Model.StartDate.HasValue)
                                {
                                    <span class="badge badge-info me-2">
                                        Start Date: @Model.StartDate.Value.ToString("yyyy-MM-dd")
                                        <a asp-page="./ListPrescription" asp-route-RecordId="@Model.RecordId" asp-route-MedicineId="@Model.MedicineId" asp-route-Dosage="@Model.Dosage" asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")" asp-route-Diagnosis="@Model.Diagnosis" asp-route-DoctorName="@Model.DoctorName" class="text-white ms-1" title="Remove start date filter">
                                            <i class="mdi mdi-close"></i>
                                        </a>
                                    </span>
                                }
                               
                                @if (!string.IsNullOrEmpty(Model.Diagnosis))
                                {
                                    <span class="badge badge-info me-2">
                                        Diagnosis: @Model.Diagnosis
                                        <a asp-page="./ListPrescription" asp-route-RecordId="@Model.RecordId" asp-route-MedicineId="@Model.MedicineId" asp-route-Dosage="@Model.Dosage" asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")" asp-route-DoctorName="@Model.DoctorName" class="text-white ms-1" title="Remove diagnosis filter">
                                            <i class="mdi mdi-close"></i>
                                        </a>
                                    </span>
                                }
                                @if (!string.IsNullOrEmpty(Model.DoctorName))
                                {
                                    <span class="badge badge-info me-2">
                                        Doctor: @Model.DoctorName
                                        <a asp-page="./ListPrescription" asp-route-RecordId="@Model.RecordId" asp-route-MedicineId="@Model.MedicineId" asp-route-Dosage="@Model.Dosage" asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")" asp-route-Diagnosis="@Model.Diagnosis" class="text-white ms-1" title="Remove doctor filter">
                                            <i class="mdi mdi-close"></i>
                                        </a>
                                    </span>
                                }
                                <span class="badge badge-secondary">@(Model.Prescriptions?.Count ?? 0) result(s)</span>
                            </div>
                        </div>
                    </div>
                }

                <!-- Success/Error Messages -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="mdi mdi-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="mdi mdi-alert-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <!-- Results Table -->
                @if (Model.Prescriptions?.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover" id="prescriptionsTable">
                            <thead>
                                <tr>
                                    <th>Prescription ID</th>
                                    <th>Medical Record</th>
                                    <th>Medicine</th>
                                    <th>Dosage</th>
                                    <th>Date</th>
                                    <th>Diagnosis</th>
                                    <th>Doctor</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Prescriptions)
                                {
                                    <tr>
                                        <td>
                                            <label class="badge badge-success">@item.PrescriptionId</label>
                                        </td>
                                        <td>
                                            <div class="badge badge-outline-info">Record #@item.RecordId</div>
                                        </td>
                                        <td>
                                            <h6 class="mb-0">@item.MedicineName</h6>
                                        </td>
                                        <td>
                                            <span class="text-muted">@item.Dosage</span>
                                        </td>
                                        <td>
                                            <span class="text-muted">@item.Date.ToString("yyyy-MM-dd")</span>
                                        </td>
                                        <td>
                                            <span class="text-muted">@item.Diagnosis</span>
                                        </td>
                                        <td>
                                            <span class="text-muted">@item.DoctorName</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-page="UpdatePrescription" asp-route-id="@item.PrescriptionId"
                                                   class="btn btn-outline-warning btn-sm btn-icon-text" title="Edit">
                                                    <i class="mdi mdi-pencil"></i> Edit
                                                </a>
                                                <button type="button" class="btn btn-outline-danger btn-sm btn-icon-text"
                                                        onclick="confirmDelete(@item.PrescriptionId, '@item.MedicineName', '@item.RecordId')"
                                                        title="Delete">
                                                    <i class="mdi mdi-delete"></i> Delete
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <nav aria-label="Prescription pagination">
                                    <ul class="pagination justify-content-center">
                                        @if (Model.CurrentPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link"
                                                   asp-route-CurrentPage="1"
                                                   asp-route-PageSize="@Model.PageSize"
                                                   asp-route-RecordId="@Model.RecordId"
                                                   asp-route-MedicineId="@Model.MedicineId"
                                                   asp-route-Dosage="@Model.Dosage"
                                                   asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                                                   asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                                                   asp-route-Diagnosis="@Model.Diagnosis"
                                                   asp-route-DoctorName="@Model.DoctorName">
                                                    <i class="mdi mdi-chevron-double-left"></i>
                                                </a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link"
                                                   asp-route-CurrentPage="@(Model.CurrentPage - 1)"
                                                   asp-route-PageSize="@Model.PageSize"
                                                   asp-route-RecordId="@Model.RecordId"
                                                   asp-route-MedicineId="@Model.MedicineId"
                                                   asp-route-Dosage="@Model.Dosage"
                                                   asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                                                   asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                                                   asp-route-Diagnosis="@Model.Diagnosis"
                                                   asp-route-DoctorName="@Model.DoctorName">
                                                    <i class="mdi mdi-chevron-left"></i>
                                                </a>
                                            </li>
                                        }

                                        @{
                                            int startPage = Math.Max(1, Model.CurrentPage - 2);
                                            int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                                        }

                                        @for (int i = startPage; i <= endPage; i++)
                                        {
                                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                                <a class="page-link"
                                                   asp-route-CurrentPage="@i"
                                                   asp-route-PageSize="@Model.PageSize"
                                                   asp-route-RecordId="@Model.RecordId"
                                                   asp-route-MedicineId="@Model.MedicineId"
                                                   asp-route-Dosage="@Model.Dosage"
                                                   asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                                                   asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                                                   asp-route-Diagnosis="@Model.Diagnosis"
                                                   asp-route-DoctorName="@Model.DoctorName">@i</a>
                                            </li>
                                        }

                                        @if (Model.CurrentPage < Model.TotalPages)
                                        {
                                            <li class="page-item">
                                                <a class="page-link"
                                                   asp-route-CurrentPage="@(Model.CurrentPage + 1)"
                                                   asp-route-PageSize="@Model.PageSize"
                                                   asp-route-RecordId="@Model.RecordId"
                                                   asp-route-MedicineId="@Model.MedicineId"
                                                   asp-route-Dosage="@Model.Dosage"
                                                   asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                                                   asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                                                   asp-route-Diagnosis="@Model.Diagnosis"
                                                   asp-route-DoctorName="@Model.DoctorName">
                                                    <i class="mdi mdi-chevron-right"></i>
                                                </a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link"
                                                   asp-route-CurrentPage="@Model.TotalPages"
                                                   asp-route-PageSize="@Model.PageSize"
                                                   asp-route-RecordId="@Model.RecordId"
                                                   asp-route-MedicineId="@Model.MedicineId"
                                                   asp-route-Dosage="@Model.Dosage"
                                                   asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                                                   asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                                                   asp-route-Diagnosis="@Model.Diagnosis"
                                                   asp-route-DoctorName="@Model.DoctorName">
                                                    <i class="mdi mdi-chevron-double-right"></i>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                                <div class="text-center mt-2">
                                    <small class="text-muted">
                                        Page @Model.CurrentPage of @Model.TotalPages
                                        (@(Model.Prescriptions?.Count ?? 0) prescriptions shown)
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body text-center py-5">
                                    <div class="empty-state">
                                        <i class="mdi mdi-file-search-outline display-1 text-muted mb-4"></i>
                                        @if (!string.IsNullOrEmpty(Model.RecordId?.ToString()) || !string.IsNullOrEmpty(Model.MedicineId?.ToString()) || !string.IsNullOrEmpty(Model.Dosage) || Model.StartDate.HasValue || Model.EndDate.HasValue || !string.IsNullOrEmpty(Model.Diagnosis) || !string.IsNullOrEmpty(Model.DoctorName))
                                        {
                                            <h4 class="mb-3">No prescriptions found with current filters</h4>
                                            <p class="text-muted mb-4">Try adjusting your filters or clear them to see all results.</p>
                                            <div class="d-flex justify-content-center gap-2">
                                                <a asp-page="./ListPrescription" class="btn btn-outline-secondary">
                                                    <i class="mdi mdi-close"></i> Clear All Filters
                                                </a>
                                                <a asp-page="CreatePrescription" class="btn btn-primary">
                                                    <i class="mdi mdi-plus"></i> Create New Prescription
                                                </a>
                                            </div>
                                        }
                                        else
                                        {
                                            <h4 class="mb-3">No prescriptions found</h4>
                                            <p class="text-muted mb-4">There are currently no prescriptions in the system.</p>
                                            <a asp-page="CreatePrescription" class="btn btn-primary">
                                                <i class="mdi mdi-plus"></i> Create Your First Prescription
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this prescription?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(prescriptionId, medicineName, recordId) {
        $('#deleteModal').modal('show');
        $('#confirmDeleteBtn').off('click').on('click', function () {
            $.ajax({
                url: `/Prescription/Delete?prescriptionId=${prescriptionId}`,
                type: 'POST',
                success: function () {
                    location.reload();
                },
                error: function () {
                    alert('Failed to delete prescription.');
                }
            });
            $('#deleteModal').modal('hide');
        });
    }
</script>